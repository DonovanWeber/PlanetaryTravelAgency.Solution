@{
  Layout = "_Layout";
}
@using PlanetaryTravelAgency.Models;
<h1>Planets we fly to:</h1>
@if (@Model.Count == 0)
{
  <h3>No planets have been added yet!</h3>
} 
<ul>
  @foreach(Planet planet in Model)
  {
    <li>@Html.ActionLink($"{planet.Name}", "Details", new { id = planet.PlanetId })</li>
  }
</ul>
<p>@Html.ActionLink("Add new planet", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>