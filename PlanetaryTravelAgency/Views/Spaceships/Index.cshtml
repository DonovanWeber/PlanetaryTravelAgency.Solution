@{
  Layout = "_Layout";
}

@using PlanetaryTravelAgency.Models;
@model List<PlanetaryTravelAgency.Models.Spaceship>;

<h1>Spaceships</h1>

@if (@Model.Count == 0)
{
  <h3>No Spaceships have been added yet!</h3>
} 

@foreach (Spaceship spaceship in Model)
{
  <li>@Html.ActionLink($"{spaceship.Name}", "Details", new { id = spaceship.SpaceshipId })
  
  </li>
}


<p>@Html.ActionLink("Add new Spaceship", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>