@{
  Layout = "_Layout";
}

@model PlanetaryTravelAgency.Models.Spaceship
<div id=Header>
<h2>@Html.DisplayFor(model =>  model.Name) Details</h2>
</div>
<hr />
<div id=MainBody>
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)<h3>

<h4>Fuel in Galactic Gallons: @Html.DisplayFor(model => model.Fuel)</h4>
<h4>Max passangers: @Html.DisplayFor(model => model.Capacity)</h4>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Ship does not have any Planetary Routes planned</p>
}
else
{
  <h4>Planets the Ship flies to:</h4>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Planet.Name</li>
     
      @using (Html.BeginForm("DeletePlanet", "Spaceships"))
      {
        @Html.Hidden("joinId", @join.PlanetSpaceshipId)
        <input type="submit" value="Delete" class="glow-on-hover" />
      }
    }
}

<p>@Html.ActionLink("Add a Planet", "AddPlanet", new { id = Model.SpaceshipId })</p>
<p>@Html.ActionLink("Edit Spaceship", "Edit", new { id = Model.SpaceshipId })</p>
<p>@Html.ActionLink("Delete Spaceship", "Delete", new { id = Model.SpaceshipId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
</div>